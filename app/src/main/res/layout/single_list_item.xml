<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_marginBottom="-30dp">
    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="220dp">
        <View
            android:id="@+id/divider4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:background="?android:attr/listDivider"
            android:outlineAmbientShadowColor="@color/white"/>
        <TextView
            android:id="@+id/txt_dateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
        <TextView
            android:id="@+id/txt_eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_category"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text=""
            android:maxLines="2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_price"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/icons_qrcode"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:text=""
            android:maxLines="1" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_price"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_access_time_white_24dp"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:text=""
            android:maxLines="1" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_address"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/icons_pricing"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:text=""
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@mipmap/icons_address"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:text=""
            android:maxLines="1" />
    </RelativeLayout>
</LinearLayout>
